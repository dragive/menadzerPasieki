<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.mainScreen.dashboard.adapters.hive.HiveDetailsActivity">

    <TextView
        android:id="@+id/tvHiveDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Name of hive"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        app:layout_constraintTop_toBottomOf="@+id/tvHiveDetailsName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHiveDetailsApiaryNameLabel"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textSize="15sp"
                android:text="@string/HiveDetailsApiaryNameLabel" />

            <TextView
                android:id="@+id/tvHiveDetailsApiaryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="----"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp">

            <TextView
                android:id="@+id/tvHiveDetailsQueenBreedLabel"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textSize="15sp"
                android:text="@string/HiveDetailsQueenBreedLabel" />

            <TextView
                android:id="@+id/tvHiveDetailsQueenBreed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="----"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp">

            <TextView
                android:id="@+id/tvHiveDetailsQueenDateOfBirthLabel"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textSize="15sp"
                android:text="@string/HiveDetailsQueenDateOfBirthLabel" />

            <TextView
                android:id="@+id/tvHiveDetailsQueenDateOfBirth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="----"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">


            <Button
                android:id="@+id/bActivityHiveDetailsDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete" />

            <Button
                android:id="@+id/bActivityHiveDetailsEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit" />

            <Button
                android:id="@+id/bActivityHiveDetailsAddTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Task" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>